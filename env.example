# HR Tech Lead Generation System - Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED CREDENTIALS (Must be set)
# =============================================================================

# Ollama LLM Configuration
OLLAMA_API_KEY=your_ollama_api_key_here

# Email Configuration (Gmail SMTP)
EMAIL_PASSWORD=your_gmail_app_password_here
EMAIL_SENDER=ariel@cliocircle.com
EMAIL_RECIPIENT=ariel@cliocircle.com

# =============================================================================
# OPTIONAL CREDENTIALS (For enhanced functionality)
# =============================================================================

# NewsData.io API (for news articles)
NEWSDATA_API_KEY=your_newsdata_api_key_here
NEWSDATA_API_CALL_LIMIT=50

# Hunter.io API (for email verification)
HUNTER_KEY=your_hunter_api_key_here

# SerpAPI (for Google search)
SERPAPI_KEY=your_serpapi_key_here

# Apify (for web scraping)
APIFY_KEY=your_apify_key_here

# BrightData Proxy (for advanced scraping)
BRIGHTDATA_PASSWORD=your_brightdata_password_here

# Google Sheets Integration
GOOGLE_SHEETS_API_KEY=your_google_sheets_api_key_here
GOOGLE_SHEETS_ID=your_google_sheets_spreadsheet_id_here

# =============================================================================
# GMAIL API CONFIGURATION
# =============================================================================

# Gmail API files (download from Google Cloud Console)
GMAIL_CREDENTIALS_FILE=gmail_credentials.json
GMAIL_TOKEN_FILE=gmail_token.json

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Weekly run configuration
WEEKLY_RUN=false
TARGET_OPPORTUNITIES=50

# Development/Testing
DEBUG=false
LOG_LEVEL=INFO
